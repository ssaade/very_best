<!-- Validation failure messages -->
<% if @dish.errors.any? %>
  <% @dish.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Dish #<%= @dish.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_dish/<%= @dish.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for dish -->
      <div class="form-group">
        <label for="dish" class="control-label">
          Dish
        </label>

        <input type="text" id="dish" name="dish" placeholder="Dish" class="form-control" value="<%= @dish.dish %>">
      </div>

      <!-- Label and input for foodtype_id -->
      <div class="form-group">
        <label for="foodtype_id" class="control-label">
          Foodtype
        </label>

        <%= select_tag(:foodtype_id, options_from_collection_for_select(FoodType.all, :id, :food_type, @dish.foodtype_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Dish
      </button>
      or
      <a href="/dishes/<%= @dish.id %>">Cancel</a>
    </form>
  </div>
</div>
