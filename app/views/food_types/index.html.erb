<div class="page-header">
  <h1>
    Food types
    <a href="/food_types/new" class="btn btn-lg btn-success">New Food type</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Food type</th>
        <th>Actions</th>
      </tr>

      <% @food_types.each do |food_type| %>
      <tr>
        <td><%= food_type.food_type %></td>
        <td>
          <a href="/food_types/<%= food_type.id %>" class="btn btn-primary">Show</a>
          <a href="/food_types/<%= food_type.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_food_type/<%= food_type.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
